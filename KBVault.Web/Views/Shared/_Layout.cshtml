@{
    var searchTerm = "";
    
    if(  ViewBag.SearchTerm != null )
    {
        searchTerm = ViewBag.SearchTerm;
    }
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
     
    @Styles.Render("~/public/css") 
    <link rel="stylesheet" href="http://code.jquery.com/ui/1.10.4/themes/redmond/jquery-ui.css">
    @RenderSection("CssHeader", required: false)
    
    <script type="text/javascript">
        var KB_SearchUrl = "@Url.Action("Ajax","Search")";
    </script>
    
</head>
<body>
                   
        
    <div class="container">
        <div class="row">
            <div class="col-lg-12 page-header">            
                <h1>
                    <a href="@Url.Action("Index","Home")"><span>@ViewBag.CompanyName</span></a> 
                    <small>@ViewBag.TagLine</small>
                    <div class="dropdown pull-right">
                        <a id="dLabel" role="button" data-toggle="dropdown" class="btn btn-primary" data-target="#" href="javascript:void(0)">
                            Categories<span class="caret"></span>
                        </a>    		            
                        @KBVaultHelperFunctions.CreateBootstrapCategoryMenu()                        
                    </div>
                </h1>                
            </div>        
            <div class="input-group input-group-lg col-lg-10">
            @using (Html.BeginForm("Do", "Search", FormMethod.Post, new { id = "SearchForm" }))
            {       
                <input type="hidden" name="ArticleId" id="ArticleId" value="" />
                <input type="text" class="form-control search-control" name="SearchKeyword" placeholder="Enter search text" ID="txtSearch" value="@searchTerm" />
                    <span class="input-group-btn">
                        <input type="submit" id="btnDoSearch" class="btn btn-default" value="Search" />
                    </span>
                 
            }    
            </div>        
        </div>

        <br />
        @RenderBody()   
       
    </div>
    <div id="footer">
        Built by KbVault
    </div>
    
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.0.2/jquery.min.js"></script>
    <script src="http://code.jquery.com/ui/1.10.4/jquery-ui.js"></script>
    @Scripts.Render("~/public/js")
    @RenderSection("scripts", required: false)
</body>
</html>
